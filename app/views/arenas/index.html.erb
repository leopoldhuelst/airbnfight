<div id="show-background-index">
  <div id="arena-page">
    <div id="index-header">
      <h1>All arenas</h1>
      <h2 id="new-arena-button"><%= link_to '+ Add Arena', arenas_new_path%></h2>
    </div>
    <div id="all-arenas">
      <% @arenas.each do |arena| %>
        <%= link_to arena_path(arena.id) do %>
        <div class="card-product">
          <img src=" <%= arena.image %> " />
          <div class="card-product-infos">
            <h2><%= arena.address %> </h2>
            <p>Capacity: <%= arena.capacity %></p>
          </div>
        </div>
        <% end %>
      <br>
      <% end %>
      <br>
    </div>
    <div style="height: 600px;" id="map"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
