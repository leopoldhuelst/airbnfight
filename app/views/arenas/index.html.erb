<div id="arena-page">
  <div class="index-page">
    <div>
      <div id="index-header">
        <h1>All arenas</h1>
        <h2 id="new-arena-button"><%= link_to '+ Add Arena', arenas_new_path%></h2>
      </div>
      <div id="all-arenas">
        <% @arenas.each do |arena| %>
          <div class="card-product">
            <img src="https://media.istockphoto.com/photos/boxing-empty-professional-ring-with-crowd-picture-id618065428?b=1&k=20&m=618065428&s=170667a&w=0&h=Ym0onml4xOJALNRnqV8lEqiamTRr1O4rNuEQIVF1l08=" />
            <div class="card-product-infos">
              <h2><%= link_to "#{arena.address}", arena_path(arena.id) %></h2>
              <p>Capacity: <%= arena.capacity %></p>
            </div>
          </div>
        <br>
        <% end %>
        <br>
      </div>
    </div>
      <div style="height: 600px;" id="map"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
