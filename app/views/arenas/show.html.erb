<h1><%= @arena.address %></h1>
<%= @arena.description %>
<%= @arena.capacity %>
<% if policy(@arena).destroy? %>
<%= link_to "Delete Arena", arenas_delete_path(@arena.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<% if policy(@arena).update? %>
<%= link_to 'Edit Arena', arena_edit_path(@arena.id) %>
<% end %>
<%= link_to 'Back to Arenas', arenas_path %>
<br>
<%= link_to "Create a fight", fights_new_path(@arena.id) %>
