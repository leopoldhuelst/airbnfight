
<div id="hospital-page">
  <div id="index-header">
    <h1>All Hospitals</h1>
    <h2 id="new-hospital-button"><%= link_to '+ Add Hospital', arenas_new_path%></h2>
  </div>
  <div id="all-hospitals">
    <% @hospitals.each do |hospital| %>
      <div class="card-product">
        <img src="https://media.istockphoto.com/photos/boxing-empty-professional-ring-with-crowd-picture-id618065428?b=1&k=20&m=618065428&s=170667a&w=0&h=Ym0onml4xOJALNRnqV8lEqiamTRr1O4rNuEQIVF1l08=" />
        <div class="card-product-infos">
          <h2><%= link_to "#{hospital.name}", hospital_path(hospital.id) %></h2>
          <p>Rating: <%= hospital.rating %></p>
        </div>
      </div>
    <br>
    <% end %>
    <br>
  </div>
</div>


